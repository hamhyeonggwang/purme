# MongoDB 설정
# 로컬 개발: mongodb://localhost:27017/linkit
# Vercel 배포: mongodb+srv://username:password@cluster.mongodb.net/linkit?retryWrites=true&w=majority
MONGODB_URI=mongodb://localhost:27017/linkit

# JWT 설정
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# 서버 설정
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Vercel 환경 변수
VERCEL=0
NEXT_PUBLIC_API_URL=http://localhost:3001/api

# 보안 설정
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=120

# API 제한 설정
API_RATE_LIMIT_WINDOW=15
API_RATE_LIMIT_MAX=100
LOGIN_RATE_LIMIT_MAX=5

# 관리자 계정 (초기 설정용)
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@linkit.com
ADMIN_PASSWORD=admin123!
